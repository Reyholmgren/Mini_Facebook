

<h3><%= @comment.body %></h3>

<h6><%= "Comment by: #{@user.name}" %></h6>


<%= link_to "Edit Comment", edit_comment_path(@comment, user_id: @user.id, post_id: @post.id) %>

<%= link_to "Delete Comment", comment_path(@comment), method: :delete %>

<%= link_to "Return to Post", post_path(@comment.post_id) %>


